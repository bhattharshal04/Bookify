<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Bootstrap-ecommerce by Vosidiy M.">

    <title>Website title - bootstrap html template</title>

    <!-- jQuery -->
    <script src="/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="/Content/css/responsive.css" rel="stylesheet" />

    <!-- custom javascript -->
    <script src="/Content/js/script.js" type="text/javascript"></script>

    <link href="/Content/css/HideTextDatesBox.css" rel="stylesheet" />

</head>
<body>

    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-sm-4 col-md-4 col-5">
                        <a href="http://bootstrap-ecommerce.com" class="brand-wrap">
                            <img class="logo" src="/Content/images/logo.png">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-lg-5 col-xl-5 col-sm-8 col-12"></div>
                    <div class="col-lg-3 col-xl-4 col-sm-12">
                        <div class="d-flex justify-content-end">
                            <a href="/Cart/Index" class="widget-header mr-3">
                                <div class="icon">
                                    <i class="icon-sm rounded-circle border fa fa-shopping-cart"></i>
                                    @* <span class="notify">@ViewBag.Cart</span>*@
                                </div>
                            </a>

                            <div class="widget-header dropdown">
                                <a href="#" data-toggle="dropdown" class="dropdown-toggle" data-offset="20,10">
                                    <div class="icon icon-sm rounded-circle border ">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    <span class="sr-only">Profile actions</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="/Account/ViewProfile">Profile setting</a>
                                    <a class="dropdown-item" href="/Categories/Index">Categories</a>
                                    <a class="dropdown-item" href="/Account/ChangePassword">Change Password</a>
                                    <a class="dropdown-item" href="/Orders/YourOrders">My orders</a>
                                    <hr class="dropdown-divider">
                                    <a class="dropdown-item" href="/Account/Logout">Log out</a>
                                </div> <!--  dropdown-menu .// -->
                            </div>  <!-- widget-header .// -->


                        </div> <!-- widgets-wrap.// -->

                    </div>
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->


        <nav class="navbar navbar-expand-md navbar-main border-bottom">
            <div class="container">


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#dropdown6">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="dropdown6">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com" data-toggle="dropdown"> All categories</a>
                            <div class="dropdown-menu">
                                @if (ViewBag.Categories != null)
                                {
                    @foreach (Category item in ViewBag.Categories)
                    {
                        @Html.ActionLink(item.CategoryName, "FilterProducts", "Products", new { id = item.CategoryId }, new { @class = "dropdown-item" })}}
                            </div>
                        </li>
                        <li class="nav-item"> <a class="nav-link" href="/Products/Index">Products</a>  </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="/Products/MyItems" class="nav-link">My items</a></li>
                        <li class="nav-item"> @Html.ActionLink("Sell Product", "Create", "Products", null, new { @class = "btn btn-primary ml-md-4" })</li>
                    </ul>
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>

    </header> <!-- section-header.// -->




    <section class="section-content bg padding-y">
        <div class="container">



            @RenderBody()

        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer border-top padding-y">
        <div class="container">
            <p class="float-left text-muted">
                Designed by Nandish Gajjar <br> Developed by Nandish Gajjar

            </p>
            <p target="_blank" class="float-right text-muted">
                Copyright &copy 2021<br>

            </p>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->


</body>
</html>