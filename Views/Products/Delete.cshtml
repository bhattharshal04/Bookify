@model BookifyNew.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Product.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductShortDesc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductShortDesc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductLongDesc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductLongDesc)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>

    }
    else
    {
        <span class="text-danger">@Html.ValidationSummary()</span>
        <a asp-action="Index">Back to List</a>
    }
</div>

